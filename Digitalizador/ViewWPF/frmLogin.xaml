<Window x:Class="ViewWPF.frmLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="frmLogin" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Opacity="1" Background="{x:Null}">
    <Grid>
        <Label Content="Login :" Height="28" HorizontalAlignment="Left" Margin="10,74,0,0" Name="rotuloLogin" VerticalAlignment="Top" />
        <TextBox Height="25" HorizontalAlignment="Left" Margin="9,99,0,0" Name="textBox1" VerticalAlignment="Top" Width="257" Background="#FFF2F2F2" />
        <Label Content="Senha:" Height="28" HorizontalAlignment="Left" Margin="11,132,0,0" Name="rotuloSenha" VerticalAlignment="Top" />
        <PasswordBox Height="25" HorizontalAlignment="Left" Margin="10,158,0,0" Name="passwordBox1" VerticalAlignment="Top" Width="256" Background="#FFF2F2F2" />
        <Button Content="Login" Height="30" HorizontalAlignment="Left" Margin="10,210,0,0" Name="btnLogar" VerticalAlignment="Top" Width="130" Background="#FFCECECE" Click="btnLogar_Click"></Button>
        <Image Height="56" HorizontalAlignment="Left" Name="image1" Stretch="None" VerticalAlignment="Top" Width="55" Source="/ViewWPF;component/Images/Login-48.png" Margin="12,12,0,0" />
    </Grid>
</Window>
